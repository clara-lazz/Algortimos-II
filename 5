#include <stdio.h>
#include <string.h> //bibliotecas
#include <locale.h>

typedef struct{ //criar um struct para ser preenchido
    char modelo[50]; //vetor com 50 opções
    int ano; //variável inteira
    double preco; //variável 0.0
} Carro;

void modificarPreco (Carro *c, double novoPreco){ //função com duas variáveis
    c->preco = novoPreco;
}

void imprimirCarro (Carro *c){ //função para imprimir o carro
    printf("Modelo: %s\n", c->modelo);
    printf("Ano: %s\n", c->ano);
    printf("Preço: %s\n", c->preco);
}

int main(){
    setlocale (LC_ALL, "portuguese");
    Carro carro1;
    
    strcpy (carro1.modelo, "XyZ"); //Definindo as informações do Carro 1
    carro1.ano = 2020;
    carro1.preco =90000.00;
    
    printf("Dados Antes da modificação: \n");
    imprimirCarro(&carro1); //chama a função e imprime os dados definidos anteriormente

    modificarPreco(&carro1, 115000.00); //Função de alterar o preço, com o novo preço

    printf("\n Dados após a modificação: \n");
    imprimirCarro(&carro1); //Chamando a função com os dados alterados
    
    return 0;
}
