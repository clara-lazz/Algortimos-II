#include <stdio.h>


void encontrarMaiorValor(int vetor[], int tamanho) {
    int maior = vetor[0];  
    int posicao = 0;  

    for (int i = 1; i < tamanho; i++) {
        if (vetor[i] > maior) {
            maior = vetor[i];
            posicao = i;
        }
    }

    printf("Maior valor: %d\n", maior);
    printf("Posição do maior valor: %d\n", posicao);
}

int main() {
    int tamanho;

    // Solicitar o tamanho do vetor
    printf("Digite o tamanho do vetor: ");
    scanf("%d", &tamanho);

    int vetor[tamanho];

    printf("Digite os %d valores do vetor:\n", tamanho);
    for (int i = 0; i < tamanho; i++) {
        printf("Digite o valor %d: ", i + 1);
        scanf("%d", &vetor[i]);
    }

    encontrarMaiorValor(vetor, tamanho);

    return 0;
}

